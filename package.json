{
  "name": "wealthmanagement",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "test": "node --test",
    "heroku-postbuild": "npm run build && npm run web:install && npm run web:build",
    "web:install": "npm install --legacy-peer-deps --prefix apps/web",
    "web:dev": "npm run dev --prefix apps/web",
    "web:build": "npm run build --prefix apps/web",
    "web:preview": "npm run preview --prefix apps/web"
  },
  "engines": {
    "node": ">=20.0.0 <21"
  },
  "dependencies": {
    "express": "^4.18.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
